<h1>Edit task</h1>

<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <p><%= f.check_box :completed, { checked: false }, true, false %> Completed</p>

  <%= f.submit class: 'btn btn-primary mb-5' %>
<% end %>

<p>
<i class="fas fa-arrow-circle-left mr-2"></i><%= link_to "Back to list", tasks_path %>
</p>
